{
    "name": "TeXLive",
    "id": "texlive",
    "version": "1.0.0",
    "description": "A feature to use TeXLive",
    "options": {
        "scheme": {
            "type": "string",
            "enum": [
                "minimal",
                "basic",
                "small",
                "medium",
                "full"
            ],
            "default": "basic",
            "description": "Choose texlive scheme."
        },
        "srcfiles": {
            "type": "boolean",
            "default": false,
            "description": "Whether to install source files"
        },
        "docfiles": {
            "type": "boolean",
            "default": false,
            "description": "Whether to install documentation files"
        },
        "collections": {
            "type": "string",
            "default": "",
            "description": "Comma separated list of collections to install"
        }
    }
}